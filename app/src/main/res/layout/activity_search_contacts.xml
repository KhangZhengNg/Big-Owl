<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.UsersFragment">

    <TextView
        android:id="@+id/textView_groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search for users to invite"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/loadContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_groupName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Load Contacts"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loadContacts"
        android:layout_margin="5dp"
        android:hint="Search..."
        android:inputType="text"
        android:id="@+id/search_users"/>

    <ListView
        android:id="@+id/listContacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_users"
        android:layout_marginTop="5dp" />

</RelativeLayout>