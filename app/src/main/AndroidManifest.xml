<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bigowlapp">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".services.ViewAnotherUserActivity" />
        <activity android:name=".services.InvitationConfirmationActivity" />
        <activity android:name=".activityPage.SupervisedGroupPageActivity" />
        <activity android:name=".services.SupervisedGroupListActivity" />
        <activity android:name=".activityPage.MonitoringGroupPageActivity" />
        <activity android:name=".services.MonitoringGroupListActivity" />
        <activity android:name=".services.SearchContactsToSupervise" />
        <activity android:name=".services.SendSmsInvitationActivity" />
        <activity android:name=".activityPage.HomePageActivity" />
        <!-- TODO The login page should load up first until we have a welcome page-->
        <activity android:name=".activityPage.LoginPageActivity">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:name=".activityPage.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activityPage.WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".activityPage.SignUpPageActivity"/>
        <activity android:name=".fragments.UsersFragment" />

    </application>

</manifest>